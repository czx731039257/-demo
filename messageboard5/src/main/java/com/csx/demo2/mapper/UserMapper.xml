<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csx.demo2.dao.UserDao">
    <select id="select" parameterType="com.csx.demo2.entity.User" resultType="com.csx.demo2.entity.User">
        select * from user
        <where>
            <if test="id!=null">
                and id=${id}
            </if>
            <if test="name!=null">
                and name=#{name}
            </if>
            <if test="password!=null">
                and password=#{password}
            </if>
            <if test="email!=null">
                and email=#{email}
            </if>
            <if test="phone!=null">
                and phone=#{phone}
            </if>
            <if test="group_id!=null">
                and group_id=${group_id}
            </if>
        </where>
    </select>
    <select id="selectOtherGroup" resultType="com.csx.demo2.entity.User" parameterType="com.csx.demo2.entity.User">
      select * from user where group_id != #{group_id}
    </select>
    <update id="update" parameterType="com.csx.demo2.entity.User">
        update user
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="password!=null">
                password=#{password},
            </if>
            <if test="email!=null">
                email=#{email},
            </if>
            <if test="phone!=null">
                phone=#{phone},
            </if>
            <if test="group_id!=null">
                group_id=#{group_id},
            </if>
        </set>
        where id=#{id}
    </update>

</mapper>